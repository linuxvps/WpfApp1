<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="FetchDataButton" Content="Fetch Students" Width="200" Height="50" VerticalAlignment="Top"
                HorizontalAlignment="Center" Click="FetchDataButton_Click" />
        <TextBox x:Name="ResultTextBox" VerticalAlignment="Bottom" Height="300" Width="500"
                 HorizontalAlignment="Center" TextWrapping="Wrap" AcceptsReturn="True" />
    </Grid>
</Window>